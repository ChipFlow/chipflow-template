{
  "name": "ChipFlow Development Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },

  // Configure tool-specific properties
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/home/user/.venv/bin/python",
        "python.analysis.typeCheckingMode": "off",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": true,
        "python.formatting.provider": "black",
        "files.associations": {
          "*.toml": "toml",
          "*.py": "python"
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.fontSize": 14,
        "remote.autoForwardPorts": false,
        "github.copilot.enable": false,
        "github.copilot.inlineSuggest.enable": false,
        "chat.commandCenter.enabled": false,
        "chat.agent.enabled": false,
	"chat.disableAIFeatures": true,
        "workbench.startupEditor": "readme",
        "extensions.ignoreRecommendations": true,
        "git.autofetch": false,
        "http.linkProtectionTrustedDomains": [
          "configurator.chipflow.io",
          "*.configurator.chipflow-infra.com"
        ]
      },
      "extensions": [
        "ms-python.python",
        "-github.copilot-chat",
        "github.vscode-github-actions",
        "crimson206.vscode-command-server"
      ]
    }
  },

  // Port forwarding disabled - users can manually forward ports if needed
  // "forwardPorts": [8000, 8080, 3000],

  // Run during prebuild - installs Python dependencies (cached!)
  "onCreateCommand": "bash .devcontainer/install-deps.sh",

  // Container optimizations
  "containerEnv": {
    "PYTHONUNBUFFERED": "1",
    "PYTHONDONTWRITEBYTECODE": "1",
    "PDM_VENV_IN_PROJECT": "1"
  },

  // Mount optimizations - persist venv and extensions
  "mounts": [
    "source=chipflow-vscode-extensions,target=/home/user/.vscode-server/extensions,type=volume",
    "source=chipflow-venv,target=${containerWorkspaceFolder}/.venv,type=volume"
  ],

  // Set container user
  "remoteUser": "user"
}
